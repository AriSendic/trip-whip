<div class="container">
  <div class="row text-center">
    <div class="col-xs-12">
      <div class="body-plain__title">
        <h1>Sign Up!</h1>
      </div>
      <%= form_tag '/users', method: :post do  %>
      <div>
        <%= label_tag :name %>
        <%= text_field_tag :name %>
      </div>
      <br>
      <div>
        <%= label_tag :email %>
        <%= text_field_tag :email %>
      </div>
      <br>
      <div>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <br>
      <div>
        <%= label_tag :password_confirmation %>
        <%= password_field_tag :password_confirmation %>
      </div>
      <br>
      <div>
        <button type="submit" class="btn btn-success ready map">Submit</button>
        <% end %>
      </div>  
    </div>
  </div>      
</div>