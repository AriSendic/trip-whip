<div class="container">
  <div class="row">

    <h1 class="section__title">Your trip: <%=@itinerary.title%></h1>
    <% if @itinerary.venues.count == 0 && @itinerary.restaurants.count == 0%>
      <h2>Start with a venue: </h2>  
      <%= form_tag "/itineraries/#{@itinerary.id}/venues", method: :get do %>
        <div class="form-group">
          <%= label_tag :city, 'Please enter your city:'%>
          <%= text_field_tag :city %>
        </div>
        <div class="form-group">
          <%= label_tag :category, 'Please enter your category:'%>
          <%= text_field_tag :category, "", list: 'venues' %>
          <datalist id="venues">
            <option>aquarium</option>
            <option>batting cages</option>
            <option>beach</option>
            <option>boat ride</option>
            <option>horseback/pony riding</option>
            <option>kayaking</option>
            <option>mini golf</option>
            <option>nature preserve</option>
            <option>nature trail</option>
            <option>paddle boat</option>
            <option>park</option>
            <option>petting zoo</option>
            <option>ropes course</option>
            <option>water park</option>
            <option>water sports?</option>
            <option>zoo</option>
            <option> indoor </option> 
            <option>amusement park </option>
            <option>arcade</option>
            <option>batting cages (indoor)sports complex?</option>
            <option>bowling alley</option>
            <option>children's museum</option>
            <option>library</option>
            <option>mall</option>
            <option>mini golf (indoor)</option>
            <option>museum</option>
            <option>nature center</option>
            <option>play area</option>
            <option>rock climbing</option>
            <option>science museum</option>
            <option>skating rink</option>
          </datalist>
        </div> 
        <div class="btn btn-default">
          <%= submit_tag 'Submit' %>
        </div>
      <% end %>  
    <% else %>
      <% @itinerary.venues.each do |venue| %>
        <h3>Venue: <%= venue.name %></h3>
        <h4>Address: <%= venue.address %></h4>
        <h4>Phone: <%= venue.phone %></h4>
        <%= link_to "Remove from trip", "/itineraries/#{@itinerary.id}/venues/#{venue.id}", method: :delete %>
        <table>
          <tr>
            <td><h4>--add a nearby restaurant</h4></td>
            <td><h4>--add a nearby venue</h4></td>
          </tr>
          <tr>
            <td>
              <%= form_tag "/itineraries/#{@itinerary.id}/restaurants", method: :get do %>
                <div class="form-group">
                  <%= label_tag :type, 'What kind of restaurant?'%>
                  <%= text_field_tag :type %>
                  <%= hidden_field_tag :lat, venue.lat %>
                  <%= hidden_field_tag :lng, venue.lng %>
                  <%= submit_tag "Submit" %>
                </div>  
              <% end %>
            </td>
            <td>
              <%= form_tag "/itineraries/#{@itinerary.id}/venues", method: :get do %>
                <div class="form-group">
                  <%= label_tag :category, 'What category?'%>
                  <%= text_field_tag :category %>
                  <%= hidden_field_tag :lat, venue.lat %>
                  <%= hidden_field_tag :lng, venue.lng %>
                  <%= submit_tag "Submit" %>
                </div>  
              <% end %>
            </td>
          </tr>
        </table>  
       
      <% end %>
        
      <% @itinerary.restaurants.each do |restaurant| %>
        <h3>Restaurant: <%= restaurant.name %></h3>
        <h4>Address: <%= restaurant.address %></h4>
        <h4>Phone: <%= restaurant.phone %></h4>
        <%= link_to "Remove from trip", "/itineraries/#{@itinerary.id}/restaurants/#{restaurant.id}", method: :delete %>
        <h4>--add a nearby venue</h4>
        <%= form_tag "/itineraries/#{@itinerary.id}/venues", method: :get do %>
          <div class="form-group">
            <%= label_tag :category, 'What category?'%>
            <%= text_field_tag :category %>
            <%= hidden_field_tag :lat, restaurant.lat %>
            <%= hidden_field_tag :lng, restaurant.lng %>
            <%= submit_tag "Submit" %>
          </div>  
        <% end %>
      <% end %>
      <%= form_tag "/itineraries/#{@itinerary.id}", method: :patch do %>
      <%= submit_tag "I'm Ready to go" %>
      <% end %>
      

      <img src="https://maps.googleapis.com/maps/api/staticmap?markers=color:blue|<%=@markers%>&size=400x400&key=<%=ENV['GOOGLE_MAPS_KEY']%>">
    
      

    <% end %>
  </div>
</div>

